<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="AxxonSoft_Prac.MainWindow"
        Title="4D Figures"
        Width="1000" Height="800"
        MinWidth="700" MinHeight="600"
        CanResize="True">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        
        <Canvas x:Name="DrawCanvas" Grid.Row="0" Background="#1a1a1a" ClipToBounds="True"/>
        
        <Grid Grid.Row="1" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,5,0,5">
                <!-- Figure collector -->
                <TextBlock Text="Figure:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                <ComboBox x:Name="FigureSelector" Width="120" Margin="0,0,15,0"/>

                <!-- Rotation mods -->
                <RadioButton x:Name="RadioX" Content="Rotation X" GroupName="Axis" Margin="10,0,5,0" VerticalAlignment="Center"/>
                <RadioButton x:Name="RadioY" Content="Rotation Y" GroupName="Axis" Margin="10,0,5,0" VerticalAlignment="Center"/>
                <RadioButton x:Name="RadioZ" Content="Rotation Z" GroupName="Axis" Margin="10,0,5,0" VerticalAlignment="Center"/>
                <RadioButton x:Name="RadioAuto" Content="Auto" GroupName="Axis" Margin="10,0,5,0" VerticalAlignment="Center" IsChecked="True"/>
                <RadioButton x:Name="RadioManual" Content="Manual" GroupName="Axis" Margin="10,0,5,0" VerticalAlignment="Center"/>
            </StackPanel>
            
            <StackPanel Grid.Row="1" Orientation="Vertical" HorizontalAlignment="Center" Margin="0,5,0,5">
                <StackPanel Orientation="Horizontal" Margin="0,2,0,2">
                    <StackPanel Orientation="Vertical" Margin="0,0,15,0">
                        <TextBlock Text="Speed:" VerticalAlignment="Center" Margin="0,0,0,2"/>
                        <StackPanel Orientation="Horizontal">
                            <Slider x:Name="SpeedSlider" Minimum="0.001" Maximum="0.05" Value="0.01" Width="120" Margin="0,0,5,0" ToolTip.Tip="Rotation Speed"/>
                            <TextBlock x:Name="SpeedValue" Text="0.01" VerticalAlignment="Center" Width="40" FontSize="11" Foreground="#888"/>
                        </StackPanel>
                    </StackPanel>
                    
                    <StackPanel Orientation="Vertical" Margin="0,0,15,0">
                        <TextBlock Text="Size:" VerticalAlignment="Center" Margin="0,0,0,2"/>
                        <StackPanel Orientation="Horizontal">
                            <Slider x:Name="SizeSlider" Minimum="50" Maximum="150" Value="100" Width="120" Margin="0,0,5,0" ToolTip.Tip="Tesseract Size"/>
                            <TextBlock x:Name="SizeValue" Text="100" VerticalAlignment="Center" Width="40" FontSize="11" Foreground="#888"/>
                        </StackPanel>
                    </StackPanel>
                    
                    <StackPanel Orientation="Vertical" Margin="0,0,15,0">
                        <TextBlock Text="Projection Dist:" VerticalAlignment="Center" Margin="0,0,0,2"/>
                        <StackPanel Orientation="Horizontal">
                            <Slider x:Name="ProjectionDistSlider" Minimum="200" Maximum="800" Value="400" Width="120" Margin="0,0,5,0" ToolTip.Tip="Projection Distance"/>
                            <TextBlock x:Name="ProjectionDistValue" Text="400" VerticalAlignment="Center" Width="40" FontSize="11" Foreground="#888"/>
                        </StackPanel>
                    </StackPanel>
                    
                    <StackPanel Orientation="Vertical" Margin="0,0,0,0">
                        <TextBlock Text="Projection Scale:" VerticalAlignment="Center" Margin="0,0,0,2"/>
                        <StackPanel Orientation="Horizontal">
                            <Slider x:Name="ProjectionScaleSlider" Minimum="150" Maximum="400" Value="300" Width="120" Margin="0,0,5,0" ToolTip.Tip="Projection Scale"/>
                            <TextBlock x:Name="ProjectionScaleValue" Text="300" VerticalAlignment="Center" Width="40" FontSize="11" Foreground="#888"/>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
                
                <StackPanel Orientation="Horizontal" Margin="0,5,0,2" HorizontalAlignment="Center">
                    <StackPanel Orientation="Vertical" Margin="0,0,15,0">
                        <TextBlock Text="Vertex Size:" VerticalAlignment="Center" Margin="0,0,0,2"/>
                        <StackPanel Orientation="Horizontal">
                            <Slider x:Name="VertexSizeSlider" Minimum="2" Maximum="12" Value="6" Width="120" Margin="0,0,5,0" ToolTip.Tip="Vertex Size"/>
                            <TextBlock x:Name="VertexSizeValue" Text="6" VerticalAlignment="Center" Width="40" FontSize="11" Foreground="#888"/>
                        </StackPanel>
                    </StackPanel>
                    
                    <StackPanel Orientation="Vertical" Margin="0,0,10,0">
                        <TextBlock Text="Edge Color:" VerticalAlignment="Center" Margin="0,0,0,2"/>
                        <ComboBox x:Name="EdgeColorSelector" Width="120" Margin="0"/>
                    </StackPanel>

                    <StackPanel Orientation="Vertical" Margin="0,0,0,0">
                        <TextBlock Text="Vertex Color:" VerticalAlignment="Center" Margin="0,0,0,2"/>
                        <ComboBox x:Name="VertexColorSelector" Width="120" Margin="0"/>
                    </StackPanel>
                </StackPanel>
                
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                    <Button x:Name="BtnTogglePlayPause" Content="Pause" Width="80" Margin="5"/>
                    <Button x:Name="BtnReset" Content="Reset" Width="80" Margin="5"/>
                </StackPanel>
            </StackPanel>
        </Grid>
    </Grid>
</Window>